	<insert id="saveChatRecord">
		INSERT INTO chat_record(
			id,
			message,
			send_user,
			receive_user,
			is_read,
			create_date,
			group_id
		) VALUES (
			#{id},
			#{message},
			#{sendUser},
			#{receiveUser},
			#{isRead},
			#{createDate},
			#{groupId}
		)
	</insert>

